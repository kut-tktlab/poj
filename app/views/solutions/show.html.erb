<header class="solution-show-header">
  <h1>
    解答 #<%= @solution.id %>
  </h1>
  <p><%= status_label(@solution) %></p>

  <div class="btn-group">
    <%= link_to edit_solution_path(@solution), class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
      編集
    <% end %>

    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="caret"></span>
      <span class="sr-only">Toggle Dropdown</span>
    </button>

    <ul class="dropdown-menu">
      <li>
        <%= link_to solution_path(@solution), method: :delete, data: { confirm: '本当に削除しますか?' } do %>
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          削除
        <% end %>
      </li>
    </ul>
  </div>
</header>

<pre><code><%= @solution.source %></code></pre>
